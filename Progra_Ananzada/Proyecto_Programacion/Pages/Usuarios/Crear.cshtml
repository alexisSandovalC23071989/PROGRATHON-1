@page
@model Proyecto_Programacion.Pages.Usuarios.CrearModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Usuario.Nombre" class="form-label text-white"></label>
        <input asp-for="Usuario.Nombre" type="text"  class="form-control" required />
        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Usuario.Tipo" class="form-label text-white"></label>
        <select asp-for="Usuario.Tipo"  class="form-control" required>
            <option value="">Seleccione...</option>
            <option value="Estudiante">Estudiante</option>
            <option value="Profesor">Profesor</option>
        </select>
        <span asp-validation-for="Usuario.Tipo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Usuario.Correo" class="form-label text-while"></label>
        <input asp-for="Usuario.Correo" type="email" class="form-control" required />
        <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-page="/Usuarios/Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
