@page
@model Proyecto_Programacion.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<h2 id="--hero-a">Lista de Usuarios</h2>

<a href="/Usuarios/Crear" class="btn btn-primary mb-3">Crear Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.ListaUsuarios)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Tipo</td>
                <td>@u.Correo</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Usuarios/Editar?id=@u.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/Usuarios/Eliminar?id=@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>