@page
@model Proyecto_Programacion.Pages.Laboratorios.EliminarModel
@{
    ViewData["Title"] = "Eliminar Laboratorio";
}

<h2>Eliminar Laboratorio</h2>

<div class="alert alert-danger">
    <p>¿Seguro que deseas eliminar el laboratorio <strong>@Model.Laboratorio.Nombre</strong>?</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/Laboratorios" class="btn btn-secondary">Cancelar</a>
</form>