@page
@model Proyecto_Programacion.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container my-5">

    <!-- Encabezado centrado -->
    <div class="card border-0 rounded-4 header-card mb-4 header-wrap">
        <div class="card-body p-4 header-body">
            <h1 class="m-0 fw-bold">Sistema de Gestión de Reservas</h1>
            <p class="lead sub m-0">Administra usuarios, laboratorios y reservas de forma eficiente.</p>
        </div>
    </div>

    <!-- Cuadritos con imagen + banda de título -->
    <div class="row g-3 text-center">

        <!-- Usuarios -->
        <div class="col-12 col-md-4">
            <a href="/Usuarios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/usuario.png" alt="Usuarios">
                        <span class="badge-icon bi bi-people-fill badge-blue"></span>
                        <div class="img-band">Usuarios</div>
                    </div>
                    <div class="tile-title">Gestión de Usuarios</div>
                    <div class="tile-text">Administra los usuarios del sistema, sus roles y datos.</div>
                </div>
            </a>
        </div>

        <!-- Laboratorios -->
        <div class="col-12 col-md-4">
            <a href="/Laboratorios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/laboratorio.jpg" alt="Laboratorios">
                        <span class="badge-icon bi bi-flask badge-green"></span>
                        <div class="img-band">Laboratorios</div>
                    </div>
                    <div class="tile-title">Gestión de Laboratorios</div>
                    <div class="tile-text">Consulta y administra los laboratorios disponibles.</div>
                </div>
            </a>
        </div>

        <!-- Reservas -->
        <div class="col-12 col-md-4">
            <a href="/Reservas" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/reserva.jpg" alt="Reservas">
                        <span class="badge-icon bi bi-calendar-check badge-red"></span>
                        <div class="img-band">Reservas</div>
                    </div>
                    <div class="tile-title">Gestión de Reservas</div>
                    <div class="tile-text">Revisa, crea y administra las reservas de los usuarios.</div>
                </div>
            </a>
        </div>

    </div>
</div>
<style>

    :root {
        --bg: #0b1220;
        --panel: #0f172a;
        --line: #1f2a3a;
        --text: #e8edf6;
        --muted: #a6b2c6;
        --hero-a: #101a2f;
        --hero-b: #161d35;
        /* Acentos */
        --blue: #76a7ff;
        --blue-bg: rgba(118,167,255,.14);
        --green: #63dfb2;
        --green-bg: rgba(99,223,178,.14);
        --red: #ff9aaa;
        --red-bg: rgba(255,154,170,.14);
        --radius: 16px;
    }

    /* Fondo y tipografía */
    body {
        background: var(--bg);
        color: var(--text);
    }

    /* Encabezado */
    .header-card {
        background: linear-gradient(135deg,var(--hero-a),var(--hero-b));
        border: 1px solid var(--line);
        border-radius: var(--radius);
    }

    .sub {
        color: var(--muted);
    }

    /* Utilidades de layout para el header */
    .header-wrap {
        max-width: 900px;
        margin: 0 auto;
    }

    .header-body {
        min-height: 160px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Tiles */
    .tile-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .tile {
        background: var(--panel);
        border: 1px solid var(--line);
        border-radius: var(--radius);
        padding: 14px;
    }

    /* Imagen + badge + banda */
    .tile-img {
        position: relative;
        width: 100%;
        height: 150px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--line);
        margin-bottom: 12px;
    }

        .tile-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .badge-icon {
        position: absolute;
        top: 10px;
        left: 10px;
        display: inline-grid;
        place-items: center;
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: 1px solid var(--line);
        font-size: 1.05rem;
    }

    .badge-blue {
        background: var(--blue-bg);
        color: var(--blue);
    }

    .badge-green {
        background: var(--green-bg);
        color: var(--green);
    }

    .badge-red {
        background: var(--red-bg);
        color: var(--red);
    }

    .img-band {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 6px 10px;
        background: rgba(10,14,24,.65);
        color: var(--text);
        font-weight: 700;
        font-size: .95rem;
        text-align: center;
    }

    .tile-title {
        font-weight: 800;
        margin-bottom: 4px;
        text-align: center;
    }

    .tile-text {
        color: var(--muted);
        font-size: .95rem;
        margin: 0;
        text-align: center;
    }

    /* Estático: sin animaciones/hover */
    * {
        transition: none !important;
    }

</style>
