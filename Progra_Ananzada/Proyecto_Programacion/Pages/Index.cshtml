@page
@model Proyecto_Programacion.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container text-center mt-5">

    <div class="card shadow-lg p-4 border-0 rounded-4" style="background: linear-gradient(135deg, #007bff, #00bcd4); color: white;">
        <h1 class="fw-bold mb-3">Sistema de Gestión de Reservas</h1>
        <p class="lead mb-4">Administra usuarios, laboratorios y reservas de forma eficiente.</p>
    </div>

    <div class="row mt-5">
        <!-- Usuarios -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 text-primary"></i>
                    <h4 class="mt-3">Gestión de Usuarios</h4>
                    <p>Administra los usuarios del sistema, sus roles y datos.</p>
                    <a href="/Usuarios" class="btn btn-primary w-100 mt-2">Ir a Usuarios</a>
                </div>
            </div>
        </div>

        <!-- Laboratorios -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body">
                    <i class="bi bi-flask display-4 text-success"></i>
                    <h4 class="mt-3">Gestión de Laboratorios</h4>
                    <p>Consulta y administra los laboratorios disponibles.</p>
                    <a href="/Laboratorios" class="btn btn-success w-100 mt-2">Ir a Laboratorios</a>
                </div>
            </div>
        </div>

        <!-- Reservas -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body">
                    <i class="bi bi-calendar-check display-4 text-danger"></i>
                    <h4 class="mt-3">Gestión de Reservas</h4>
                    <p>Revisa, crea y administra las reservas de los usuarios.</p>
                    <a href="/Reservas" class="btn btn-danger w-100 mt-2">Ir a Reservas</a>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        transition: 0.3s ease;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-body i {
        transition: transform 0.3s ease;
    }

    .hover-card:hover i {
        transform: scale(1.1);
    }
</style>