@page
@model Proyecto_Programacion.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
</head>

<body>

<header role="banner" class="site-header">
    <h1 class="site-title">Inicio</h1>
    <div class="controls" role="toolbar" aria-label="Controles de accesibilidad">
        <button id="btn-contrast" class="btn small" type="button" aria-pressed="false" aria-label="Activar modo alto contraste">Alto contraste</button>
        <button id="btn-font-increase" class="btn small" type="button" aria-label="Aumentar tamaño de letra">A+</button>
        <button id="btn-font-decrease" class="btn small" type="button" aria-label="Disminuir tamaño de letra">A-</button>
    </div>
</header>

<div class="container my-5">

    <!-- Encabezado centrado -->
    <div class="card border-0 rounded-4 header-card mb-4 header-wrap">
        <div class="card-body p-4 header-body">
            <h1 class="m-0 fw-bold">Sistema de Gestión de Reservas</h1>
            <p class="lead sub m-0">Administra usuarios, laboratorios y reservas de forma eficiente.</p>
        </div>
    </div>

    <!-- Cuadritos con imagen + banda de título -->
    <div class="row g-3 text-center">

        <!-- Usuarios -->
        <div class="col-12 col-md-4">
            <a href="/Usuarios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/usuario.png" alt="Usuarios">
                        <span class="badge-icon bi bi-people-fill badge-blue"></span>
                        <div class="img-band">Usuarios</div>
                    </div>
                    <div class="tile-title">Gestión de Usuarios</div>
                    <div class="tile-text">Administra los usuarios del sistema, sus roles y datos.</div>
                </div>
            </a>
        </div>

        <!-- Laboratorios -->
        <div class="col-12 col-md-4">
            <a href="/Laboratorios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/laboratorio.jpg" alt="Laboratorios">
                        <span class="badge-icon bi bi-flask badge-green"></span>
                        <div class="img-band">Laboratorios</div>
                    </div>
                    <div class="tile-title">Gestión de Laboratorios</div>
                    <div class="tile-text">Consulta y administra los laboratorios disponibles.</div>
                </div>
            </a>
        </div>

        <!-- Reservas -->
        <div class="col-12 col-md-4">
            <a href="/Reservas" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/reserva.jpg" alt="Reservas">
                        <span class="badge-icon bi bi-calendar-check badge-red"></span>
                        <div class="img-band">Reservas</div>
                    </div>
                    <div class="tile-title">Gestión de Reservas</div>
                    <div class="tile-text">Revisa, crea y administra las reservas de los usuarios.</div>
                </div>
            </a>
        </div>

    </div>
</div>

    <footer role="contentinfo" class="site-footer">
        <p>&copy; @DateTime.Now.Year - MiApp</p>
    </footer>

    <!-- Live region para mensajes que deben anunciarse a lectores de pantalla -->
    <div id="live-region" aria-live="polite" aria-atomic="true" class="sr-only"></div>

</body>


<style>

    :root {
        --bg: #ffffff;
        --panel: #0f172a;
        --line: #1f2a3a;
        --text: #111111;
        --muted: #a6b2c6;
        --hero-a: #101a2f;
        --hero-b: #161d35;

        /* Agregar para accesibilidad */
        --base-font: 1rem;
        --scale-factor: 1; /* multiplicador para cambiar tamaño dinámicamente */
        --primary: #001234;
        --accent: #00695c;
        --focus: 3px solid #ffb300; /* outline visible */
        --link-underline: 1px solid currentColor;

        /* Acentos */
        --blue: #76a7ff;
        --blue-bg: rgba(118,167,255,.14);
        --green: #63dfb2;
        --green-bg: rgba(99,223,178,.14);
        --red: #ff9aaa;
        --red-bg: rgba(255,154,170,.14);
        --radius: 16px;
    }

    html {
        font-size: 16px;
    }

    /* base for rem */
    body {
        font-size: calc(var(--base-font) * var(--scale-factor));
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
        color: var(--text);
        background: var(--bg);
        line-height: 1.4;
    }

    h1, h2, h3 {
        line-height: 1.2;
    }

    /* Encabezado */
    .header-card {
        background: linear-gradient(135deg,var(--hero-a),var(--hero-b));
        border: 1px solid var(--line);
        border-radius: var(--radius);
    }


    /* Estático: sin animaciones/hover */
    * {
        transition: none !important;
    }

    /* Layout */
    .site-header {
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        background: #f4f4f4;
    }

    .controls .btn {
        margin-left: 0.5rem;
    }

    /* Buttons */
    .btn {
        padding: 0.5em 0.75em;
        font-size: 1em;
        border-radius: 6px;
        border: 1px solid #ccc;
        background: #fff;
        cursor: pointer;
    }

        .btn:focus {
            outline: none;
            box-shadow: var(--focus);
        }

    /* Accessible visible focus for keyboard users */
    :focus {
        outline: none;
        box-shadow: var(--focus);
    }

    /* High contrast mode */
    .high-contrast {
        --bg: #000000;
        --text: #ffffff;
        --primary: #ffff00;
        --accent: #00ffff;
        background: var(--bg);
        color: var(--text);
    }

        .high-contrast a {
            color: var(--primary);
            font-weight: 700;
        }

    /* Images responsive and alt displayed if needed */
    .responsive-img {
        max-width: 100%;
        height: auto;
    }

    /* Screen-reader only */
    .sr-only {
        position: absolute !important;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0,0,0,0);
        white-space: nowrap;
        border: 0;
    }

</style>
