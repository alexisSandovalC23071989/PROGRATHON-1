@page
@model Proyecto_Programacion.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container my-5">

   
    <div class="card border-0 rounded-4 header-card mb-4 header-wrap">
        <div class="card-body p-4 header-body">
            <h1 class="m-0 fw-bold">Sistema de Gestión de Reservas</h1>
            <p class="lead sub m-0">Administra usuarios, laboratorios y reservas de forma eficiente.</p>
        </div>
    </div>

    
    <div class="row g-3 text-center">

        
        <div class="col-12 col-md-4">
            <a href="/Usuarios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/usuario.png" alt="Usuarios">
                        <span class="badge-icon bi bi-people-fill badge-blue"></span>
                        <div class="img-band">Usuarios</div>
                    </div>
                    <div class="tile-title">Gestión de Usuarios</div>
                    <div class="tile-text">Administra los usuarios del sistema, sus roles y datos.</div>
                </div>
            </a>
        </div>

        
        <div class="col-12 col-md-4">
            <a href="/Laboratorios" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/laboratorio.jpg" alt="Laboratorios">
                        <span class="badge-icon bi bi-flask badge-green"></span>
                        <div class="img-band">Laboratorios</div>
                    </div>
                    <div class="tile-title">Gestión de Laboratorios</div>
                    <div class="tile-text">Consulta y administra los laboratorios disponibles.</div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4">
            <a href="/Reservas" class="tile-link">
                <div class="tile">
                    <div class="tile-img">
                        <img src="/img/reserva.jpg" alt="Reservas">
                        <span class="badge-icon bi bi-calendar-check badge-red"></span>
                        <div class="img-band">Reservas</div>
                    </div>
                    <div class="tile-title">Gestión de Reservas</div>
                    <div class="tile-text">Revisa, crea y administra las reservas de los usuarios.</div>
                </div>
            </a>
        </div>

    </div>
</div>

