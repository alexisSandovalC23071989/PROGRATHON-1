@page

@model Proyecto_Programacion.Pages.Reservas.CrearModel

@{

    ViewData["Title"] = "Crear Reserva";

}

<h2>Crear Reserva</h2>

<form method="post">
    <div class="form-group">
        <label>ID Usuario</label>
        <input asp-for="Reserva.IdUsuario" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label>ID Laboratorio</label>
        <input asp-for="Reserva.IdLaboratorio" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input asp-for="Reserva.Fecha" type="datetime-local" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a href="/Reservas" class="btn btn-secondary mt-3">Cancelar</a>
</form>

